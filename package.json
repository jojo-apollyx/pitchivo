{
  "name": "pitchivo",
  "private": true,
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "debug": "NODE_OPTIONS='--inspect=9229' turbo run dev:debug --filter=web",
    "debug:clear-ports": "./scripts/clear-debug-ports.sh",
    "supabase": "supabase",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:status": "supabase status",
    "supabase:reset": "supabase db reset --local",
    "supabase:migrate": "supabase db push --local",
    "supabase:migrate:run": "node scripts/run-migration.js",
    "supabase:dump-schema": "node scripts/dump-schema.js",
    "supabase:deploy": "supabase functions deploy",
    "supabase:functions:serve": "supabase functions serve --env-file .env.local"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.45.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "supabase": "^2.51.0",
    "turbo": "^2.0.3"
  }
}

